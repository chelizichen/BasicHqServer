<%- include('head', {publicPath: publicPath}); %>

    <body>
        <%- include('header', {publicPath: publicPath}); %>
            <div style="width: 60vw;height:80vh;padding:10vh 20vw 0 20vw">
                <div id="chart" style="width: 100%;height:60%;"></div>
            </div>


            <%- include('footer', {publicPath: publicPath}); %>

                <!-- 添加一个 div 作为图表的容器 -->
                <!-- 引入 JavaScript 文件 -->
                <script defer>
                    // 初始化图表实例
                    var myChart = echarts.init(document.getElementById("chart"));
                    // 指定图表的配置项和数据
                    var option = {
                        title: {
                            text: '<%= title %>',
                        },
                        tooltip: {
                            trigger: 'axis'
                        },
                        legend: {
                            data: ['<%- legend %>'],
                        },
                        xAxis: {
                            data: JSON.parse('<%- xData %>'),
                            axisLabel: {
                                color: '#333',
                                //  让x轴文字方向为竖向
                                rotate: 65,
                                textStyle: {
                                    fontSize: 14, // 文字大小
                                    fontWeight: 'bold' // 文字粗细
                                },
                            },
                            type: 'category',
                            axisLine: {
                                show: false // 隐藏 X 轴轴线
                            },
                            axisTick: {
                                show: false // 隐藏 X 轴刻度线
                            },
                            splitLine: {
                                show: true,
                                lineStyle: {
                                    color: "rgba(77, 128, 254, 0.2)",
                                    width: 2
                                }
                            }
                        },
                        yAxis: {},
                        series: [
                            {
                                name: '<%- legend %>',
                                type: "bar",
                                data: JSON.parse('<%- yData %>'),
                                label: {
                                    show: true,
                                    position: 'top'
                                },
                                barWidth: 20 // 调整柱子宽度
                            },
                        ],
                    }
                    console.log(option.xAxis)
                    console.log(option.series)
                    // 使用刚指定的配置项和数据显示图表。
                    myChart.setOption(option);
                </script>
    </body>

    </html>